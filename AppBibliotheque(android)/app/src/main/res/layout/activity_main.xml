<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:weightSum="10"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:weightSum="5"
    android:layout_marginBottom="8dp"

    >
    <Button
        android:id="@+id/btnProfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_portrait_black_24dp"
       android:background="#1C9CA5"
        android:text="sssss@mail.com"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold"
        android:enabled="false"
        android:textAlignment="textStart"
        android:textAllCaps="false"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
        android:paddingRight="6dp"
        android:background="#1C9CA5"
        android:onClick="GoToLogin"
        android:textColor="#ffffff"


        />
</LinearLayout>
    <Button
        android:id="@+id/btnGestionEleves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_weight="3"

        android:background="#F05249"
        android:drawableLeft="@mipmap/eleve"
        android:onClick="ToGestionEleves"
        android:padding="20dp"
        android:text="Gestion Des Eleves"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnGestionLivres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_weight="3"
        android:background="#57B846"
        android:drawableLeft="@mipmap/livre_icon"
        android:onClick="ToGestionLivres"
        android:padding="20dp"
        android:text="Gestion Des Livres"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnGestionEmprunts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_weight="3"
        android:background="#2B8FD8"
        android:drawableLeft="@mipmap/emprunt"
        android:onClick="ToGestionEmprunts"
        android:padding="20dp"
        android:text="Gestion Des Emprunts"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />


</LinearLayout>